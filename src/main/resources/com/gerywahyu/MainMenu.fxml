<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<GridPane
        xmlns="http://javafx.com/javafx/8.0.232" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.gerywahyu.controller.MainMenu"
        alignment="center"
        hgap="10"
        vgap="10">
    <padding><Insets top="40" left="40" right="40" bottom="40"/></padding>

    <Button fx:id="addFileButton" defaultButton="true"
            text="Add File" prefWidth="100" prefHeight="30"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.halignment="RIGHT" onAction="#handleAddFileButton">
        <GridPane.margin>
            <Insets top="10" bottom="10"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="saveFileButton" defaultButton="true"
            text="Save" prefWidth="100" prefHeight="30"
            GridPane.columnIndex="1" GridPane.rowIndex="0"
            GridPane.halignment="RIGHT" onAction="#handleSaveFileButton">
        <GridPane.margin>
            <Insets top="10" bottom="10"/>
        </GridPane.margin>
    </Button>
</GridPane>